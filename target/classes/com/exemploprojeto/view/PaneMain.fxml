<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.exemploprojeto.controller.PaneMainController">
   <children>
      <Group>
         <children>
            <ImageView fx:id="imageViewLogo" fitHeight="33.0" fitWidth="77.0" onMouseClicked="#handleButtonHome" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/png-transparent-graphy-logo-computer-software-installation-technology-symbol-organization-thumbnail.png" />
               </image>
            </ImageView>
            <MenuBar layoutX="33.0" prefHeight="33.0" prefWidth="564.0" styleClass="menuBarStyle">
              <menus>
                <Menu fx:id="menuCadastro" mnemonicParsing="false" text="Cadastros">
                  <items>
                    <MenuItem fx:id="menuItemServico" mnemonicParsing="false" onAction="#handleMenuItemServico" text="Serviços" />
                        <MenuItem fx:id="menuItemFuncionario" mnemonicParsing="false" onAction="#handleMenuItemFuncionario" text="Funcionarios" />
                        <MenuItem fx:id="menuItemCliente" mnemonicParsing="false" onAction="#handleMenuItemCliente" text="Clientes" />
                        <MenuItem fx:id="menuItemEquipamentos" mnemonicParsing="false" onAction="#handleMenuItemEquipamentos" text="Equipamentos" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
      </Group>
      <AnchorPane fx:id="anchorPaneMain" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#animationReverseTabPane" prefHeight="400.0" prefWidth="600.0">
         <children>
            <GridPane layoutX="153.0" layoutY="72.0" prefHeight="128.0" prefWidth="295.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="buttonFuncionarios" mnemonicParsing="false" onAction="#handleButtonFuncionarios" prefHeight="37.0" prefWidth="131.0" text="Funcionarios" />
                  <Button fx:id="buttonClientes" mnemonicParsing="false" onAction="#handleButtonClientes" prefHeight="37.0" prefWidth="131.0" text="Clientes" GridPane.columnIndex="1" />
                  <Button fx:id="buttonEquipamentos" mnemonicParsing="false" onAction="#handleButtonEquipamentos" prefHeight="37.0" prefWidth="131.0" text="Equipamentos" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="buttonServicos" mnemonicParsing="false" onAction="#handleButtonServicos" prefHeight="37.0" prefWidth="131.0" text="Serviços" GridPane.rowIndex="1" />
               </children>
            </GridPane>
            <TabPane fx:id="tabPaneMain" layoutX="-4.0" layoutY="305.0" onMouseClicked="#animationPlayTabPane" prefHeight="289.0" prefWidth="606.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Pendentes">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="102.0" prefWidth="606.0" styleClass="anchorPendenteStyle">
                           <children>
                              <TableView fx:id="tableViewPendente" prefHeight="283.0" prefWidth="606.0" AnchorPane.bottomAnchor="-217.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="tableColumnIdPendente" prefWidth="103.0" styleClass="tableViewText" text="ID" />
                                  <TableColumn fx:id="tableColumnDescricaoPendente" prefWidth="317.0" styleClass="tableViewText" text="Descrição" />
                                  <TableColumn fx:id="tableColumnDataAbPendente" prefWidth="184.0" styleClass="tableViewText" text="Data de Abertura" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </children>
      </AnchorPane>
   </children>
</VBox>
